prep-lex := adposition-lex & 
  [ SYNSEM.LOCAL.CAT.VAL [ SPR < >,
               COMPS < #comps > ],
    ARG-ST < [ LOCAL.CAT.HEAD noun ],
         #comps &
         [ LOCAL.CAT [ VAL [ SPR < >,
