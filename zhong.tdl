;; SSH 2014-09-04: Teh style feature for efficient generation
sign :+
 [ STYLE style,
   IDIOMATIC luk ].

;;; STYLE
style := avm & 
 [ WRITTEN luk ].
strict := style &
 [ WRITTEN + ].
robust := style.
spoken := robust & 
 [ WRITTEN - ].
unproductive := robust.
dialect := robust. 

lex-rule :+ 
 [ STYLE #style,
   DTR.STYLE #style ].

basic-unary-phrase :+ 
  [ STYLE #style,
    SYNSEM.PAREN #paren,
    ARGS < [ STYLE #style,
	     SYNSEM.PAREN #paren ] > ].


;; SSH 2014-12-19: BOUND is introduced. Lexical items with [BOUND +]
;; cannot be combined with the other of itself.
synsem :+ 
 [ PUNCTUATED luk,
   INTERJECTED luk,
   PAREN luk,
   ASPECTED luk,
   POSTCOMP luk,
   BARE luk,
   SPART spart,
   BOUND luk ].

spart := avm.
not-crs := spart.
not-ma := spart.
crs := not-ma.
ma := not-crs.
no-spart := spart.
not-crs-not-ma := not-crs & not-ma.


