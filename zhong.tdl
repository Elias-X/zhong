;;; Resultative Compounds 
;;; SSH 2015-04-06
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; @phdthesis{lee:13,
;   title={Event Structure and Grammatical Patterns: Resultative Constructions},
;   author={Lee, Leslie},
;   year={2013},
;   school={University of California, San Diego}
